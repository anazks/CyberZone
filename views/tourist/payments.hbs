<link rel='stylesheet' href='/stylesheets/user.css' />
<style>
    body {
        background: linear-gradient(90deg, #bdc3c7, #2c3e50);
    }
    table,tr,td,th{
        width: 80%;
        border: 1px solid rgb(237, 237, 237);
        color: white;
        margin: auto;
        text-align: center;
            box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
    }
</style>

<div class="login-page" style="width: 70vw;">
    <div class="form">
        <div>
            <h2 class="title" style="color: #2c3e50;">Payments</h2>
        </div>
        <form class="login-form" action="/tourist/addPayments" method="post">
            <input type="text" name="amount" placeholder="Enter Amount" required />
            <textarea name="description" placeholder="Short work_pattern description" id="" cols="10" rows="5"
                required></textarea>
            <input type="date" name="date" placeholder="Enter Projects" required />
            <button type="submit" style="background: #00c3ff;">Pay Now</button>
            <a href="/tourist" class="font-weight-bold" style="text-decoration: none;">Back</a>
        </form>
    </div>
</div>

<div class="container">
        <table>
                <tr>
                    <th>Company Name</th>
                    <th>Amount</th>
                    <th>description</th>
                    <th>Date</th>                   
                </tr>
{{#each payments}}
                <tr>
                    <th>{{company_name}}</th>
                    <th>{{amount}}</th>
                    <th>{{description}}</th>
                    <th>{{date}}</th>                   
                </tr>
{{/each}}
        </table>
</div>